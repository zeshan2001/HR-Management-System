<%- include('../partials/_header') %>

<div class="container my-5">
  <table class="table table-striped-columns my-5">
    <tbody>
      <tr>
        <td><b>Project Name</b></td>
        <td><%= project.projectName %></td>
      </tr>
      <tr>
        <td><b>Budget</b></td>
        <td><%= project.budget %></td>
      </tr>
      <tr>
        <td><b>Start Date</b></td>
        <td><%= project.startDate.toISOString().split('T')[0] %></td>
      </tr>
      <tr>
        <td><b>End Date</b></td>
        <td><%= project.deadLine.toISOString().split('T')[0] %></td>
      </tr>
      <tr>
        <td><b>Description</b></td>
        <td><%= project.description %></td>
      </tr>
      <tr>
        <td><b>Assigned to the Project</b></td>
        <td>
          <ol>
            <% ee.forEach(employee => { %>
            <li><%= employee.name %></li>
            <% }) %>
          </ol>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="d-flex justify-content-end">
    <form class="mx-5" action="/projects/<%= project._id %>/edit">
      <button class="btn btn-primary w-100 py-2">Edit</button>
    </form>

    <form
      class=""
      action="/projects/<%= project._id %>?_method=DELETE"
      method="post"
    >
      <button class="btn btn-primary w-100 py-2" type="submit">Delete</button>
    </form>
  </div>
</div>

<%- include('../partials/_footer') %>
