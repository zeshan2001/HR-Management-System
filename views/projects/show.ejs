<%- include('../partials/_header') %>

<div class="container my-5">
  <div class="d-flex flex-column justify-content-between align-items-center">
    <div>
      <h2>Details of projects:</h2>
      <h3>Budget: <%= project.budget %></h3>
      <p>
        <h3>Description:</h3>
        <%= project.description %>
      </p>
      <h6>start date: <%= project.startDate.toISOString().split('T')[0] %></h6>
      <h6>start date: <%= project.deadLine.toISOString().split('T')[0] %></h6>
      <p>
        <h3>Assigned to the Project:</h3>
      </p>
    </div>
    <div class="d-flex gap-2">
      <div class="d-flex justify-content-between align-items-center">
        <form class="mx-5" action="/projects/<%= project._id %>/edit">
          <button>Edit</button>
        </form>

        <form
          class="mx-5"
          action="/projects/<%= project._id %>?_method=DELETE"
          method="post"
        >
          <button type="submit">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/_footer') %>