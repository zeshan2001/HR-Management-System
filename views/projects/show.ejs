<%- include('../partials/_header') %>

<div class="container my-5">
  <div class="d-flex flex-column justify-content-between align-items-center">
    <div>
      <h2>Details of projects:</h2>

      <h4>Budget: <%= project.budget %></h4>

      <h4>Description:</h4>
      <p><%= project.description %></p>

      <h6>Start date: <%= project.startDate.toISOString().split('T')[0] %></h6>
      <h6>Deadline: <%= project.deadLine.toISOString().split('T')[0] %></h6>

      <h4>Assigned to the Project:</h4>
      <ul>
        <% ee.forEach(employee => { %>
          <li><%= employee.name %></li>
        <% }) %>
      </ul>
    </div>

    <div class="d-flex gap-2 mt-4">
      <form class="mx-2" action="/projects/<%= project._id %>/edit">
        <button class="btn btn-primary w-100 py-2">Edit</button>
      </form>

      <form class="mx-2" action="/projects/<%= project._id %>?_method=DELETE" method="post">
        <button class="btn btn-primary w-100 py-2" type="submit">Delete</button>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/_footer') %>
