<%- include('../partials/_header') %>
<h1>edit project</h1>

<form action="/projects/<%= project._id %>/edit?_method=PUT" method="post">

  <label for="projectName">Name: </label>
  <input type="text" name="projectName" id="projectName" value="<%= project.projectName %>"/>
  <br />

  <label for="startDate">start Date: </label>
  <input type="date" name="startDate" id="startDate" value="<%= project.startDateFormatted %>" />
  <br />
  
  <label for="deadLine">Deadline: </label>
  <input type="date" name="deadLine" id="deadLine" value="<%= project.deadLineFormatted %>"/>
  <br />

  <label for="budget">Buget: </label>
  <input type="number" name="budget" id="budget" value="<%= project.budget %>"/>
  <br />
  
  <button type="submit">Add a new project</button>

</form>

  <%- include('../partials/_footer') %>