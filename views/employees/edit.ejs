<%- include('../partials/_header') %>

<div class="container">
  <main class="form-signin w-50 m-auto">
    <form action="/employees/<%= employee._id %>?_method=PUT" method="post" enctype="multipart/form-data">
      <h1 class="h3 mb-3 fw-normal">Update Employee Info</h1>
      <div class="form-floating mb-4">
        <input
        type="text"
        name="email"
        class="form-control"
        id="email"
        value="<%= employee.email %>"/>
        <label for="email">Email</label>
      </div>
      
      <input type="file" name="profilePicture" >
      <br>
      <br>

      <div class="form-floating mb-4">
        <input 
          type="text" 
          name="name" 
          id="name" 
          class="form-control"
          value="<%= employee.name %>"/>
        <label for="name">Name</label>
      </div>

      <div class="form-floating mb-4">
        <input 
          type="text" 
          name="phone"
          class="form-control"            
          id="phone" 
          value="<%= employee.phone %>" 
          />
        <label for="phone">Phone</label>
      </div>

      <div class="form-floating mb-4">
        <input
          type="number"
          name="salary"
          class="form-control"
          id="salary"
          value="<%= employee.salary %>"
        />
        <label for="salary">Salary</label>
      </div>

      <div class="form-floating mb-4">
        <select 
          name="department" 
          class="form-select"
          id="department" 
          value="<%= employee.department  %>">

          <option value="Sales" <%= employee.department === "Sales"? "selected" : "" %> >
            Sales
          </option>

          <option value="Marketing" <%= employee.department === "Marketing"? "selected" : "" %> >
            Marketing
          </option>
          
          <option value="IT" <%= employee.department === "IT"? "selected" : "" %> >
            IT
          </option>

        </select>      
        <label for="department">Department</label>
      </div>

      <button class="btn btn-primary w-100 py-2" type="submit">Update Employee</button>
    </form>
  </main>
</div>

<%- include('../partials/_footer') %>
