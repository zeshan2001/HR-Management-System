
<%- include('../partials/_header') %>

<div class="container my-5">
  <div class="d-flex flex-column justify-content-between align-items-center">
    <div>
      <h2>Details of employee:</h2>
      <h4>Name: <%= employee.name%></h4>
      <h4>email: <%= employee.email%></h4>
      <h4>phone: <%= employee.phone%></h4>
      <h4>salary: <%= employee.salary%></h4>
      <h4>department: <%= employee.department%></h4>
    </div>
    <div class="d-flex gap-2">
      <div class="d-flex justify-content-between align-items-center">
        <form class="mx-5" action="/employees/<%= employee._id %>/edit">
          <button class="btn btn-primary w-100 py-2" >Edit</button>
        </form>

        <form
          class="mx-5"
          action="/employees/<%= employee._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-primary w-100 py-2" type="submit">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/_footer') %>